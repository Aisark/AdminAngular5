{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["app/components/*"],
      "@login/*": ["app/login/*"],
      "@pages/*": ["app/pages/*"],
      "@share/*": ["app/share/*"],
      "@services/*": ["app/services/*"],
      "@models/*": ["app/models/*"],
      "@config/*": ["app/config/*"],
      "@pipes/*": ["app/pipes/*"]
    }
  }
}
